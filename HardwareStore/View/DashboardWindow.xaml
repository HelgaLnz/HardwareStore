<Window x:Class="HardwareStore.View.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardwareStore.View"
        xmlns:viewmodel="clr-namespace:HardwareStore.ViewModel"
        mc:Ignorable="d"
        Title="DashboardWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:DashboardViewModel/>
    </Window.DataContext>
    <Grid>
    <ListView x:Name="dgUser" ItemsSource="{Binding Products}">
        <ListView.View>
        <GridView>
            <GridView.Columns>
            <GridViewColumn Header="ProductCost" DisplayMemberBinding="{Binding ProductName}"/>
            <GridViewColumn Header="ProductName" DisplayMemberBinding="{Binding Category.CategoryValue}"/>
            </GridView.Columns>
        </GridView>
        </ListView.View>
    </ListView>
    </Grid>
</Window>
